@model List<BEE.Models.hive>


<div asp-validation-summary="All"></div>
@if( TempData["error"] != null )
{
    <p>@TempData["error"]</p>
}
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">BEE</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a class="align-right" asp-area="" asp-controller="Map" asp-action="Places">Hive Map</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Hive" asp-action="AddNewHivePage">Add Hive</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Home" asp-action="GivePermission">Give Permission</a></li>
                <li><a class="align-right" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a></li>

            </ul>
        </div>
    </div>
</nav>
<br>

<div class="container" >


<h3> Here are All the Hives You're Managing, @ViewBag.RetrievedUser.firstName: </h3>

    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Age of Hive</th>
                <th>Status</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var rev in Model )
            {
                <tr>
                    <td>@rev.hiveAddress</td>
                    <td>@rev.hiveCity</td>
                    <td>@rev.hiveState</td>
                    <td>@rev.hiveZip</td>
                    <td>@rev.age</td>
                    <td>@rev.status</td>
                    <td>@rev.notes</td>
                    <td>
                    <form asp-controller="Hive" asp-action="HiveDetails" asp-route-id="@rev.hiveid" method="Post">
                        <button type="submit">Edit Hive</button>
                    </form>
                    </td>
                    <td>
                    <form asp-controller="Hive" asp-action="DeleteHiveForm" asp-route-id="@rev.hiveid" method="Post">
                        <button type="submit">Delete Hive</button>
                    </form>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
    </div>
</div>