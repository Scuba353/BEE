<h3> Would You like to give Beekeepers permission to use your land? </h3>

<div class="container img-fluid" id="PermAddBG">

    
    <form asp-controller="Permission" asp-action="CreatePermissionForm" method="POST">
        
        <div class="form-group landAmountForm">
            <!-- <label asp-for="hiveAddress"></label> -->
            <input class ="form-control" asp-for="landAmt"/><br>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="allergies" value="true" id="PermCheck"/>
            <label class="form-check-label" for="allergies">
                <h4>Yes, I AM Allergic to Bees</h4>
            </label>
        </div>

        <div class="form-group">
            <!-- <label asp-for="status"></label> -->
            <input class ="form-control" asp-for="accessInfo"/><br>
        </div>

        <div class="form-group">
            <!-- <label asp-for="notes"></label> -->
            <input class ="form-control" asp-for="accessTime"/><br>
        </div>
    
        <div class="form-group">
            <button type="submit" class="btn btn-info"> Give Permission </button>
        </div>

    </form>
    
