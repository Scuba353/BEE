@model BEE.Models.NewLogUserViewModel
<div asp-validation-summary="All"></div>
@if(TempData["error"] != null)
{
    <p>@TempData["error"]</p>
}

<body>
    <div class="container">
        <div class="row">
			<div class="col-md-5 mx-auto">
			<div id="first">
				<div class="myform form ">
					 <div class="logo mb-3">
						 <div class="col-md-12 text-center">
							<h1>Login</h1>
						 </div>
					</div>
                   <form asp-controller="Home" asp-action="LoginUserForm" method="POST">
                           <div class="form-group">
                              <label asp-for="email"></label>
                              <input class ="form-control" asp-for="email" id="email" aria-describedby="emailHelp">
                           </div>
                           <div class="form-group">
                              <label asp-for="password"></label>
                              <input class ="form-control" asp-for="password" id="password" aria-describedby="emailHelp">
                           </div>
                           <div class="form-group">
                              <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                           </div>
                           <div class="col-md-12 text-center ">
                              <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                           </div>
                           <div class="col-md-12 ">
                              <div class="login-or">
                                 <hr class="hr-or">
                                 <span class="span-or">or</span>
                              </div>
                           </div>
                           <div class="col-md-12 mb-3">
                              <p class="text-center">
                                 <a href="javascript:void();" class="google btn mybtn"><i class="fa fa-google-plus">
                                 </i> Signup using Google
                                 </a>
                              </p>
                           </div>
                           <div class="form-group">
                              <p class="text-center">Don't have account? <a asp-action="AddUserForm" id="signup">Sign up here</a></p>
                           </div>
                        </form>
                 
				</div>
			</div>
		</div>
    </div>   
         
</body>